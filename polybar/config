module-margin = 1

font-0 = "DejaVu Sans Mono:style=Bold:size=9"
font-1 = "DejaVuSansMono Nerd Font:style=Bold:size=10"

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-padding = 4
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = ns-resize

[bar/i3bar]
inherit = bar/base
modules-left = i3 
modules-center = 
modules-right = xkeyboard backlight pulseaudio wifi ethernet memory cpu temperature battery date 

[bar/bspwm-bar]
inherit = bar/base
modules-left = bspwm xwindow
modules-center = date 
modules-right = xkeyboard backlight pulseaudio wifi ethernet temperature battery 
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

pin-workspaces = false
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = true

format = <label-state> <label-mode>

label-monitor = %name%

label-focused = %name%
label-focused-background = ${colors.primary}

label-occupied = %name%
label-occupied-underline = ${colors.primary}

label-urgent = %name%
label-urgent-underline = ${colors.alert}

label-empty = %name%
label-empty-underline = ${colors.background}

label-separator = 
label-separator-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 50
format-prefix = "  "
format-padding = 1

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 


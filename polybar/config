format-background = ${colors.background}
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-padding = 1

label-layout = %name%

label-indicator-on-capslock = " CAPS LOCK"
label-indicator-on-background = ${self.format-background}

[module/backlight]
